module test_init_comm_D1E4_mod
    use mod_kinds,                  only: ik
    use mod_constants,              only: XI_MIN, XI_MAX, BOUNDARY, IO_DESTINATION
    use mod_test_utilities,         only: create_mesh_file
    use mod_file_utilities,         only: delete_file
    use type_chidg,                 only: chidg_t
    use mod_chidg_mpi,              only: IRANK, NRANK, GLOBAL_MASTER
    use mpi_f08,                    only: MPI_COMM
    use pfunit_mod
    implicit none





contains

    !>  This test reads a 4x1x1 element grid using 1, 2, 3, and 4 processors and 
    !!  tests communication data.
    !!
    !!  Using 1 processor, all communication(face neighbors) should be local. 
    !!  Using 4 processors, all communication should occur globally, across processors. 
    !!  Here, we just check all the indices defining the communication
    !!  for the different cases, npes=[1, 2, 3, 4].
    !!
    !!  @author Nathan A. Wukie (AFRL)
    !!  @date   6/21/2016
    !!
    !-----------------------------------------------------------------------------------
    @Test(npes=[1,2,3,4])
    subroutine test_init_comm_D1E4(this)
        class(MpiTestMethod), intent(inout) :: this

        type(chidg_t)                               :: chidg
        type(mpi_comm)                              :: ChiDG_COMM

        integer(ik)                     :: iread, ierr
        character(len=:), allocatable   :: gridfile

        
        IRANK              = this%getProcessRank()
        NRANK              = this%getNumProcessesRequested()
        ChiDG_COMM%mpi_val = this%getMpiCommunicator()



        gridfile       = "D1E4M1.h5"
        IO_DESTINATION = 'file'



        !
        ! Initialize ChiDG
        !
        call chidg%start_up('mpi',ChiDG_COMM)
        call chidg%start_up('core')


        !
        ! Create mesh file
        !
        if (IRANK == GLOBAL_MASTER) then
            call create_mesh_file("D1 NxNxN",gridfile,nelem_xi=4,nelem_eta=1,nelem_zeta=1)
        end if
        call MPI_Barrier(ChiDG_COMM,ierr)


        !
        ! Set the accuracy of the solution expansion
        !
        call chidg%set('Solution Order', integer_input=3)


        !
        ! Read partition data: grid, boundary conditions
        !
        call chidg%read_mesh(gridfile)
        call MPI_Barrier(ChiDG_COMM,ierr)




        !
        ! Check communication data. proc, neighbor indices, etc.
        !
        if ( NRANK == 1 ) then
            ! Element 1
            @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ftype )

            @assertEqual(0, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
            @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
            @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

            ! Element 2
            @assertEqual(0, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_proc)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_l)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_l)

            @assertEqual(0, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_proc)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_domain_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_domain_l)
            @assertEqual(3, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_element_g)
            @assertEqual(3, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_element_l)

            ! Element 3
            @assertEqual(0, chidg%data%mesh%domain(1)%faces(3,XI_MIN)%ineighbor_proc)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(3,XI_MIN)%ineighbor_domain_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(3,XI_MIN)%ineighbor_domain_l)
            @assertEqual(2, chidg%data%mesh%domain(1)%faces(3,XI_MIN)%ineighbor_element_g)
            @assertEqual(2, chidg%data%mesh%domain(1)%faces(3,XI_MIN)%ineighbor_element_l)

            @assertEqual(0, chidg%data%mesh%domain(1)%faces(3,XI_MAX)%ineighbor_proc)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(3,XI_MAX)%ineighbor_domain_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(3,XI_MAX)%ineighbor_domain_l)
            @assertEqual(4, chidg%data%mesh%domain(1)%faces(3,XI_MAX)%ineighbor_element_g)
            @assertEqual(4, chidg%data%mesh%domain(1)%faces(3,XI_MAX)%ineighbor_element_l)

            ! Element 4
            @assertEqual(0, chidg%data%mesh%domain(1)%faces(4,XI_MIN)%ineighbor_proc)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(4,XI_MIN)%ineighbor_domain_g)
            @assertEqual(1, chidg%data%mesh%domain(1)%faces(4,XI_MIN)%ineighbor_domain_l)
            @assertEqual(3, chidg%data%mesh%domain(1)%faces(4,XI_MIN)%ineighbor_element_g)
            @assertEqual(3, chidg%data%mesh%domain(1)%faces(4,XI_MIN)%ineighbor_element_l)

            @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(4,XI_MAX)%ftype )
        end if


        if ( NRANK == 2 ) then


            if ( IRANK == 0 ) then

                ! Element 1
                @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ftype )

                @assertEqual(0, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

                ! Element 2
                @assertEqual(0, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_l)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_l)

                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_domain_l)
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ineighbor_element_l)


            else if ( IRANK == 1 ) then

                ! Element 3
                @assertEqual(0, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_l)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_g)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_l)

                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(4, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

                ! Element 4
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_l)
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_l)

                @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ftype )

            end if

        end if



        if ( NRANK == 3 ) then

            if ( IRANK == 0 ) then
                ! Element 1
                @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ftype )

                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

            else if ( IRANK == 1 ) then
                ! Element 2
                @assertEqual(0, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_l)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_l)

                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)


            else if ( IRANK == 2 ) then
                ! Element 3
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_l)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_l)

                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(4, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

                ! Element 4
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_domain_l)
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(2,XI_MIN)%ineighbor_element_l)

                @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(2,XI_MAX)%ftype )
            end if
        end if





        if ( NRANK == 4 ) then
            if ( IRANK == 0 ) then
                ! Element 2
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_l)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_l)

                @assertEqual(3, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

            else if ( IRANK == 1 ) then

                ! Element 1
                @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ftype )

                @assertEqual(0, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

            else if ( IRANK == 2 ) then
                ! Element 4
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_l)
                @assertEqual(3, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_l)

                @assertEqual(BOUNDARY, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ftype )


            else if ( IRANK == 3 ) then
                ! Element 3
                @assertEqual(0, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_domain_l)
                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MIN)%ineighbor_element_l)

                @assertEqual(2, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_proc)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_domain_l)
                @assertEqual(4, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_g)
                @assertEqual(1, chidg%data%mesh%domain(1)%faces(1,XI_MAX)%ineighbor_element_l)

            end if



        end if



        call chidg%shut_down('core')
        call chidg%shut_down('mpi')


        if (IRANK == GLOBAL_MASTER) then
            call delete_file(gridfile)
        end if

    end subroutine test_init_comm_D1E4
    !******************************************************************************************





end module test_init_comm_D1E4_mod
