label:   KERMODE
url:     https://github.com/jameskermode/f90wrap 
copying: Copyright James Kermode. Used with permission under the BSD 3-clause license.
purpose: Approach for determining fortran pointer storage size.
------------------------------------------------------------------------------
program main
    implicit none
    type :: fortran_type
        type(fortran_type), pointer :: p => null()
    end type fortran_type
    type(fortran_type)      :: ftype
    integer, allocatable    :: int_array(:)
    integer                 :: type_int_size
    type_int_size  = size(transfer(ftype,  int_array))
    write(*,'(I0)', advance='no'), type_int_size
end program main











